languages:
  php:
    standards:
      - PSR-12
      - Laravel
    custom_rules:
      - rule_name: no_unused_imports
        description: "Remove unused imports."
      - rule_name: consistent_return
        description: "Ensure that all methods have consistent return types."
    extensions:
      - "php-cs-fixer"
      - "phpstan"
      - "phpmd"
general_settings:
  max_line_length: 120
  ignore_paths:
    - "vendor"
    - "node_modules"
  exclude_files:
    - ".gitignore"
    - "README.md"
  include_hidden: false
